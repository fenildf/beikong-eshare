= page_data_table :chapters, @chapters, :striped, :bordered do |table|
  - table.add_column :title do |ch|
    %a{:href => "/manage/chapters/#{ch.id}"}= ch.title
  - table.add_column :'course-wares-count' do |ch|
    = ch.course_wares.count
  - table.add_column :'practices-count' do |ch|
    = ch.practices.count
  - table.add_column :updated_at

  - table.add_column(:ops) do |ch|
    %a.btn.gray-flat.small{:href => "/manage/chapters/#{ch.id}"}
      %i.icon-edit
      %span>= t('common.edit')

    %a.btn.danger-flat.small.delete{:href => 'javascript:;', :data => {:url => "/manage/chapters/#{ch.id}"}}
      %i.icon-remove.icon-white
      %span>= t('common.delete')

  - table.add_column :position do |ch|
    %a.btn.gray-flat.onlyicon.small.move-down.updown{:href => 'javascript:;', :title => '向上移动', :data => {:method => :put, :url => "/manage/chapters/#{ch.id}/move_down"}}
      %i.icon-arrow-down

    %a.btn.gray-flat.onlyicon.small.move-up.updown{:href => 'javascript:;', :title => '向下移动', :data => {:method => :put, :url => "/manage/chapters/#{ch.id}/move_up"}}
      %i.icon-arrow-up