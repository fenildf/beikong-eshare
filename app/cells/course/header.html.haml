.baseinfo
  - if @user.present?
    .btns
      / 收藏
      - if @course.faved_by? @user
        = link_to "/courses/#{@course.id}/unfav", :class=> 'btn fav fav-flat faved', :method => :post do
          %i.icon-star
          %span 取消收藏

      - else
        = link_to "/courses/#{@course.id}/dofav", :class=> 'btn fav fav-flat', :method => :post do
          %i.icon-star-empty
          %span 加入收藏

      / 参加课程
      - if @user == @course.creator
        %span{:style => 'background: #eee;padding:10px; position:relative; left:10px; top:5px;'} 我是任课老师

      - elsif @user.is_student?
        - if @course.is_selected_by? @user
          = link_to "/courses/#{@course.id}/exit", :class=> 'btn join gray-flat', :method => :post do
            %i.icon-signout
            %span 退出这门课程
        - else
          = link_to "/courses/#{@course.id}/join", :class=> 'btn join success-flat', :method => :post do
            %i.icon-plus
            %span 参加这门课程

  .infodata
    %h2= @course.name
    .data
      .cover= fit_image(@course.cover.versions[:normal].url, :width => 200, :height => 200)
      .ds
        .d
          %span.t 上课时间：
          %span.v= @course.time.blank? ? '--' : @course.time
        .d
          %span.t 上课地点：
          %span.v= @course.location.blank? ? '--' : @course.location
        .d
          %span.t 创建者：
          %span.v #{@course.creator.name} 老师
        .d
          - desc = @course.desc.blank? ? t('common.course.course-no-desc') : @course.desc
          %span.t 课程简介：

          - desc  = @course.desc || t('common.course.course-no-desc')
          - short = truncate_u(desc, 32)
          - long  = simple_format desc

          - if short == desc
            .desc.open
              .long
                .txt= long

          - else
            .desc.closed.page-long-desc
              .short
                %span= short
                %a.o{:href => 'javascript:;'}
                  %i.icon-chevron-down
                  %span 展开
              .long
                .txt= long
                %a.c{:href => 'javascript:;'}
                  %i.icon-chevron-up
                  %span 收起

      .clearfix

  .clearfix