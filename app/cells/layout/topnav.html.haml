.page-top-nav
  .search
    %input{:type => :text, :name => :q, :placeholder => '搜索课程内容 …', :value => params[:query]}
    %a.do-search.btn.gray-flat{:href => 'javascript:;'}
      %i.icon-search
      %span 搜索

  - if @user.is_admin?
    .list
      %a.item{:href => '/courses'}
        %i.icon-book
        %span 课程中心
      %a.item{:href => '/account/edit'}
        %i.icon-cog
        %span 设置管理员密码
      %a.item{:href => '/account/sign_out'}
        %i.icon-off
        %span 退出

  - else
    .list
      %a.item{:href => '/courses'}
        %i.icon-book
        %span 课程中心
      %a.item{:href => '/account/edit'}
        %i.icon-cog
        %span 账号设置
      %a.item{:href => '/account/sign_out'}
        %i.icon-off
        %span 退出