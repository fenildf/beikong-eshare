- if @user.is_admin?
  .page-header
    .navbar.container-full
      .row
        .col-pad-12
          .search
            %input.form-control{:name => :q, :type => :text, :placeholder => '搜索课程和其他内容…'}
            %a.do-search{:href => 'javascript:;'}
              %i.fa.fa-search

          .right
            %a.item{:href => '/account/edit'}
              %i.fa.fa-key
              %span 设置管理员密码
            %a.item{:href => '/account/sign_out'}
              %i.fa.fa-power-off
              %span 退出登录

- elsif @user.is_teacher? or @user.is_student?
  .page-header
    .navbar.container-full
      .row
        .col-pad-12
          .search
            %input.form-control{:name => :q, :type => :text, :placeholder => '搜索课程和其他内容…'}
            %a.do-search{:href => 'javascript:;'}
              %i.fa.fa-search

          .right
            %a.item{:href => '/courses'}
              %i.fa.fa-book
              %span 课程中心
            %a.item{:href => '/account/edit'}
              %i.fa.fa-cog
              %span 账号设置
            %a.item{:href => '/account/sign_out'}
              %i.fa.fa-power-off
              %span 退出登录