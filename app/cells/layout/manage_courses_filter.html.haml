-# 通过 "/manage/courses?q=#{q}" 搜索
-# 具体逻辑定义在 search.js.coffee

.page-filter.manage-courses
  %input.form-control{:name => :q, :type => :text, :placeholder => '查找课程', :value => @query, :data => {:href => '/manage/courses'}}

  - if @query.present?
    %a.btn.btn-pill.btn-flat{:href => '/manage/courses', :title => '清除搜索词'}
      %i.fa.fa-remove
      %span 清除

  %a.do-search.btn.btn-pill.btn-flat{:href => 'javascript:;', :title => '搜索'}
    %i.fa.fa-search
    %span 搜索