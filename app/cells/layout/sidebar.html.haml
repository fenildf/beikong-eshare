.page-sidebar
  - if @user.present?
    .user-info
      .avatar= avatar @user, :large
      .name= @user.name
    - if @user.is_admin?
      .role 管理员用户
      = simple_navbar :admin, :as_list, :with_icon
    - elsif @user.is_teacher?
      = simple_navbar :teacher, :as_list, :with_icon
    - elsif @user.is_student?
      = simple_navbar :student, :as_list, :with_icon