.sign-in-form
  = simple_form_for User.new, :as => :user, :url => '/account/sign_in', :remote => true do |f|
    .form-inputs
      = f.input :login, :placeholder => '用户名', :required => true
      = f.input :password, :required => true, :placeholder => '密码', :required => true
    .form-actions
      .div{:style => 'display:none;'}
        = f.submit '登录'

      %a.btn.primary-flat.large.sign-in.do-submit{:href => 'javascript:;'}
        %span 登录云课堂

    .remember
      = f.input :remember_me, :as => :boolean
    .clearfix

.sign-res-info{:style => 'display:none;'}
  .info{:style => 'display:none;'}
    %i.icon-info-sign
    %span 提示信息
  .info.ok{:style => 'display:none;'}
    %i.icon-ok
    %span 登录成功