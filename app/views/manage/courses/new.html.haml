- content_for :header do
  = render_cell :manage_courses_breadcrumb, :form, :model => @course

.page-course-form
  .pblock.form
    .row
      .col-pad-6
        = simple_form_for @course, :url => '/manage/courses', :defaults => {:input_html => {:class => 'form-control'}} do |f|
          .form-inputs
            = f.input :name
            = f.input :cid
            = f.input :desc, :as => :text, :input_html => {:rows => 6}
            = f.input :cover, :as => :file

          .form-submits
            %a.submit.btn.btn-pill.btn-flat-success{:href => 'javascript:;'}
              %i.fa.fa-check
              %span 创建课程
            %a.cancel.btn.btn-pill.btn-flat{:href => '/manage/courses'}= t('common.form.cancel')