.page-course-show
  .pblock.modelinfo
    = render_cell :course, :header, :course => @course, :user => current_user
    = render_cell :course, :navbar, :course => @course

  .mainp66{:style => 'padding-right:10px;'}
    = render_cell :questions, :gridlist, :user => current_user, :questions => @questions
  .sidep33
    %a.btn.ask{:href => "/questions/new?course_id=#{@course.id}"} 
      %i.icon-plus.icon-white
      %span 发起提问

    .pblock
      %h3.cp 问答相关统计
      .cpart
        .st
          %span 总提问数：
          %span= @course.questions.count
        .st
          %span 总回答数：
          %span= @course.question_answers.count
        .st
          %span 还没有被回答的问题数：
          %span= @course.questions_without_answers_count
