- content_for :header do
  %h1 基础信息设置
  .desc 设置用户账号基本信息

.page-account-edit
  .password-form.pblock.form
    = flash[:notice]
    = simple_form_for resource, :as => resource_name, :url => registration_path(resource_name, :by => :pwd) do |f|
      .form-inputs
        = f.input :current_password
        = f.input :password
        = f.input :password_confirmation

      .form-actions{:style => 'margin-top:20px;'}
        %a.do-submit.btn.success-flat{:href => 'javascript:;'}
          %i.icon-ok
          %span 修改密码