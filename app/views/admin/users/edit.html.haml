- content_for :header do
  %h1 修改用户信息

.page-admin-user-edit
  .pblock.form
    .cpart.base-info
      %h3.cp 基本信息
      = simple_form_for @user, :url => "/admin/users/#{@user.id}" do |f|
        = f.input :login
        = f.input :name
        
        = render_cell :admin, :form_user_role_select, :form_object => f
        
        = f.button :submit, :class => 'success-flat'
        %a.btn.cancel.gray-flat{:href => '/admin/users'}= t('common.form.cancel')

  .pblock
    .cpart.chpw
      %h3.cp 修改密码
      = simple_form_for @user, :url => "/admin/users/#{@user.id}/change_password" do |f|
        = f.input :password
        = f.input :password_confirmation
        = f.button :submit, '修改密码', :class => 'success-flat'
        %a.btn.cancel.gray-flat{:href => '/admin/users'}= t('common.form.cancel')